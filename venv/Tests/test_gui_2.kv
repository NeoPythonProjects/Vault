<TestScreen>:
    GridLayout:
        cols: 1
        Label:
            text:"test label"
            size_hint_y:0.1

        ExampleViewer:
            viewclass: 'Button'  # defines the viewtype for the data items.
            #orientation: "vertical"
            #spacing: 20
            #padding:10, 10
            #space_x: self.size[0]/3

            RecycleBoxLayout:
                orientation: 'vertical' # defines the orientation of data items
                color:(0, 0.7, 0.4, 0.8)
                default_size: None, dp(56)
                # defines the size of the widget in reference to width and height
                default_size_hint: 1, None
                #padding for the whole box, not the items
                padding: 10,10
                #spacing: 10,10
                size_hint_y: None
                height: self.minimum_height


<RootWidget>:
    TestScreen:
        name: "test_screen"